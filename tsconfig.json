{
  "compilerOptions": {
    "module": "esnext",
    "removeComments": true,
    "target": "ESNext",
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": [
      "ESNext"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ]
}
